<div class="rr-field">
  <div class="rr-text-field">
    <input
      id={{id}}
      placeholder=" "
      {{#if type}}
      type="{{type}}"
      {{else}}
      type="text"
      {{/if}}
      {{#if value}}
      value="{{value}}"
      {{/if}}
      {{#if autocomplete}}
      autocomplete="{{autocomplete}}"
      {{/if}}
    />
    <label for="{{id}}">{{t label}}</label>
    <fieldset>
      <legend>
        <span>{{t label}}</span>
      </legend>
    </fieldset>
  </div>
  {{#if supportsErrors}}
    <span class="rr-field-error {{id}}-error"></span>
  {{/if}}
</div>
